{
  "$schema": "https://json.schemastore.org/tsconfig",
  "display": "Nest.js",
  "compilerOptions": {
    "outDir": "./dist",
    "baseUrl": "./",
    "rootDirs": [
      "./src",
      "./test"
    ],
    "declarationMap": true,
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "noFallthroughCasesInSwitch": false,
    "preserveConstEnums": true,
    "resolveJsonModule": true,
    "removeComments": true,
    "declaration": true,
    "noLib": false,
    "sourceMap": true,
    "skipLibCheck": true,
    "esModuleInterop": true,
    "checkJs": false,
    "moduleResolution": "Node",
    "module": "CommonJS",
    "lib": [
      "es2015"
    ],
    "target": "ES2020"
  },
  "exclude": [
    "node_modules"
  ],
  "include": [
    "src/**/*.ts",
    "test/**/*.ts"
  ]
}
